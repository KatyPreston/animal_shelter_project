<h2>Animals Ready for Adoption</h2>

<div>
<% for animal in @animals %>
  <p>Name: <%= animal.name() %></p>
  <p>Type: <%= animal.type() %></p>
  <p> <img src="<%= animal.url%>" alt="picture of the animal">  </p>
  <p>Admission Date: <%=animal.admission_date  %>  </p>
  <p>Adoptable: <%= animal.adoptable %></p>
  <p>Adopted: <%= animal.adopted %></p>


  <button type="button" class="btn"><a href="/adoptions/new" class="button-link">Adopt this Animal</a></button>


  <form method="get" action="/animals/<%= animal.id  %>/edit">
    <input type="submit" value="Edit animal">
  </form>
  <form action="/animals/<%= animal.id %>/delete" method="post">
    <input type="submit" value="Delete animal">
  </form>

  <hr />
<%end  %>
</div>
